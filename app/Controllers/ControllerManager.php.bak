namespace Controllers;

define('DOC_ROOT_PATH', $_SERVER['DOCUMENT_ROOT'].'/');
class ControllerManager
{

    public static function setView()
    {
        include DOC_ROOT_PATH .'../html/aoui/app/Views/HF/header.php';
        include (dirname(__FILE__).'/../Controllers/'.$_GET['controller'].'/'.$_GET['action'].'.php');
        include DOC_ROOT_PATH .'../html/aoui/app/Views/HF/footer.php';
    }

    public static function setSpecialView($view)
    {
        include '../../app/Views/HF/header.php';
        include (dirname(__FILE__).'/../Views/'.$_GET['controller'].'/'.$view.'.php');
        include '../../app/Views/HF/footer.php';
    }
}